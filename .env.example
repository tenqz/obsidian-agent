# Absolute/relative path on host to your Obsidian vault
OBSIDIAN_VAULT_PATH=./vault

# MCP transport mode: "stdio" for Cursor, "sse" for network access
MCP_TRANSPORT=sse

# External port on host for MCP server
MCP_PORT=8001

# OAuth 2.1 authentication for ChatGPT MCP (Authorization Code + PKCE)
MCP_OAUTH_ENABLED=true

# OAuth issuer (your public server URL with HTTPS in production)
MCP_OAUTH_ISSUER=https://your-server.com
# Optional static OAuth client credentials (recommended for non-public access)
# If set, only clients with matching client_id + client_secret can exchange codes for tokens.
MCP_OAUTH_CLIENT_ID=
MCP_OAUTH_CLIENT_SECRET=
