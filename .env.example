# Absolute/relative path on host to your Obsidian vault
OBSIDIAN_VAULT_PATH=./vault

# MCP transport mode: "stdio" for Cursor, "sse" for network access
MCP_TRANSPORT=sse

# External port on host for MCP server
MCP_PORT=8001

# OAuth 2.0 authentication for SSE mode
MCP_OAUTH_ENABLED=true
MCP_OAUTH_CLIENT_ID=your_client_id
MCP_OAUTH_CLIENT_SECRET=your_client_secret
MCP_OAUTH_ISSUER=http://localhost:8001
